// Prisma schema for TPQ Dashboard
// DB: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           String   @id @default(uuid())
  name         String
  parentName   String
  dateOfBirth  DateTime
  gender       String
  schoolLevel  String
  tpqGroup     String
  level        String
  isActive     Boolean @default(true)
  attendances  Attendance[]
  progressMateri  ProgressMateri[]
  createdAt    DateTime @default(now())
}

model Attendance {
  id           String   @id @default(uuid())
  student      Student  @relation(fields: [studentId], references: [id])
  studentId    String
  date         DateTime
  status       String
  activityType String   // KBM atau KHQ
  createdAt    DateTime @default(now())
}

model ProgressMateri {
  id          String   @id @default(uuid())
  student     Student  @relation(fields: [studentId], references: [id])
  studentId   String
  semester    String   // "Semester 1" atau "Semester 2"
  category    String   // "Surat" atau "Doa"
  target      String   // Nama surat/doa
  status      String   // "Tercapai" atau "Belum Tercapai"
  createdAt   DateTime @default(now())

  @@unique([studentId, semester, category, target])
}
